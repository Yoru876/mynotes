<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_popup_modern"
    android:elevation="4dp"
    android:paddingVertical="12dp">

    <LinearLayout
        android:id="@+id/menu_item_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_marginEnd="16dp"
            android:contentDescription="Icono Fondo"
            app:tint="?attr/colorOnSurface"/> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Fondo"
        android:textSize="15sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.01"/> </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_save"
            android:layout_marginEnd="16dp"
            app:tint="?attr/colorOnSurface"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Respaldo"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_restore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_marginEnd="16dp"
            app:tint="?attr/colorOnSurface"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurar"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"/>
    </LinearLayout>

</LinearLayout>